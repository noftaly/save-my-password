{{#if errors}}
  <div class="alert alert-danger" role="alert">
    <strong>Problème(s) :</strong>
    {{#each errors}}
      <br />- {{{ this.msg }}}
    {{/each}}
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-danger" role="alert">
    <strong>Erreur :</strong>
    {{{ error_msg }}}
  </div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger" role="alert">
    <strong>Erreur :</strong>
    {{{ error }}}
  </div>
{{/if}}

{{#if success_msg}}
  <div class="alert alert-success" role="alert">
    <strong>Succès !</strong>
    {{{ success_msg }}}
  </div>
{{/if}}

